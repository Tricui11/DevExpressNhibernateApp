<?xml version = "1.0" encoding = "utf-8" ?>

<hibernate-mapping xmlns = "urn:nhibernate-mapping-2.2"
   assembly = "StoreWPFDXApp" namespace = "StoreWPFDXApp.Models">

  <class name = "Products">
    <id name = "ID">
      <generator class = "native"/>
    </id>

    <property name = "Name"/>
    <property name = "Article"/>
    <property name = "Description"/>
    <property name = "Price"/>

    <many-to-one name="Brands" class="Brands" column="BrandID" cascade = "None"/>
    <many-to-one name="Categories" class="Categories" column="CategoryID" cascade = "None"/>
  </class>

</hibernate-mapping>